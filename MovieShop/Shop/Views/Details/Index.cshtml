@model MoviesShopProxy.DomainModel.Movie

<div class="container>
    <div class=" row">
    <div class="col-xs-3 col-sm-3 col-md-3">
        <img class="details-img img-responsive" src="@Model.PicturePath" />
    </div>
    <div class="col-xs-3 col-sm-3 col-md-4 movie-details">
        <p>@Model.Title</p>
        <p>Release year :  @Model.Year.Year</p>
        <div class="btn-buy">
            @using (Html.BeginForm("AddToCart", "Details"))
            {
                @Html.AntiForgeryToken();
                <input type="hidden" value="@Model.Id" name="movieId" />
                <button class="button-buy" type="submit">
                    <span>
                        @Model.Price @Session["Currency"] <span class="glyphicon glyphicon-shopping-cart"></span>
                        </span>
                    </button>
            }
        </div>
    </div>
    <div class="col-xs-4 col-sm-5">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="@Model.TrailerURL" allowfullscreen></iframe>
        </div>
    </div>
</div>

</div>
