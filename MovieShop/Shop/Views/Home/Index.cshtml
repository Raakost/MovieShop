@using DomainModel;
@model IEnumerable<DomainModel.Movie>

<div class="container">
    <div class="row">
        @foreach (Movie movie in Model)
        {
            <div class="col-xs-4 col-sm-3 col-md-3">
                <a href="@Url.Action("Index", "Details", new {id = movie.Id })">
                    <div class="thumbnail movie-thumbnail">

                        <img src="@movie.PicturePath" alt="@movie.Title" class="img-responsive">
                        <div class="caption">
                            <h3><strong>@movie.Title</strong></h3>
                        </div>
                    </div>
                </a>
            </div>
        }

    </div>
</div>

