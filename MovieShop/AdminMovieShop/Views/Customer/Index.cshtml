@model List<MoviesShopProxy.DomainModel.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Street Name</th>
            <th>Street Number</th>
            <th>Zipcode</th>
            <th>Country</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Firstname</td>
                <td>@item.Lastname</td>
                <td>@item.StreetName</td>
                <td>@item.StreetNumber</td>
                <td>@item.Zipcode</td>
                <td>@item.Country</td>
                <td>@item.Email</td>
                <td>
                    @using (Html.BeginForm("Delete", null, new { id = item.Id }, FormMethod.Post))
                    {
                        <button type="submit" class="btn btn-warning">Delete</button>
                    }
                </td>
            </tr>
        }
        
    </tbody>
</table>
@if (ViewBag.CustomerError != null)
{
    <div style="color : red;">@ViewBag.CustomerError</div>
}

