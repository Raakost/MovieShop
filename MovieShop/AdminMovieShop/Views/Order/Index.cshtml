@model IEnumerable<DomainModel.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Order Date</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Date</td>
                <td>@item.Customer.Firstname</td>
                <td>@item.Customer.Lastname</td>
                <td>@item.Customer.Email</td>
                <td>
                    @using (Html.BeginForm("Delete", null, new { id = item.Id }, FormMethod.Post))
                {                
                    <button type="submit" class="btn btn-warning">Delete</button>
                }
                </td>
            </tr>
        }
    </tbody>
</table>
