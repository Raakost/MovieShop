@model DomainModel.Movie

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<form method="Post" action="~/Movies/Delete" class="col-md-12">
    <input type="hidden" class="form-control" name="Id" value="@Model.Id" hidden>
    <table class="table table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Year</th>
                <th>Price</th>
                <th>Picture Path</th>
                <th>TrailerURL</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Title</td>
                <td>@Model.Year</td>
                <td>@Model.Price</td>
                <td>@Model.PicturePath</td>
                <td>@Model.TrailerURL</td>
                <td>@Model.Genre.Name</td>
            </tr>
        </tbody>
    </table>
    <button type="submit" class="btn btn-success"> Delete</button>
    @Html.ActionLink("Cancle", "Index", null, new { @class = "btn btn-success" })
</form>

